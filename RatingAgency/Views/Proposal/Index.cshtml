@model ViewModels.ViewModels.ProposalViewModel



<div>
    <h2>Proposal Form</h2>

    @using (Html.BeginForm("SubmitProposalForEvaluation", "Proposal", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(m => m.File, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.File, null, new { @type = "file", @class = "input-file" })
            @Html.ValidationMessageFor(m => m.File)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Name, null, new { @type = "text", @class = "input-file", @autocomplete = "autocomplete" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>

        <div>
            <label>
                &nbsp;
                <input type="submit" value="Submit" class="form-select submit" />
            </label>
        </div>
    }
    

</div>